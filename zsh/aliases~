# Common
alias la="ls -la"

# Git
alias g="git status"
alias gci="git ci -am"
alias gco="git co"
alias gmerge="git merge"
alias gmergenoff="git merge --no-ff"


# Bundle exec 
be() {
  if [[ -a Gemfile ]]; then
    bundle exec $*
  else
    command $*
  fi
}


